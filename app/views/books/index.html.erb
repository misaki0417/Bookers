<body>

<%= flash[:notice] %>

<h1>Books</h1>

<table>
    <thead>
      <tr>
      <th class="title">Title</th>
      <th class="body">Body</th>
      <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
    <tr>
      <td><%=book.title %></td>
      <td class="body"><%=book.body %></td>
      <td><%= link_to 'Show',show_books_path(book.id) %></td>
      <td><%= link_to 'Edit',edit_books_path(book.id) %></td>
      <td><%= link_to 'Destroy',destroy_books_path(book.id), method: :delete,"data-confirm"=>"Are you sure?" %></td>
    </tr>
    <% end %>

    </tbody>
</table>


<h2>New Book</h2>

<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this book from being saved:
<ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
</ul>
<% end %>

<%= form_with model: @book do |f| %>
<label for="book_title">Title</label>
<%= f.text_field:title %>
<label for=book_body>Body</label>
<%= f.text_area:body %>
<div><%= f.submit'Create Book' %></div>
<% end %>


</body>



